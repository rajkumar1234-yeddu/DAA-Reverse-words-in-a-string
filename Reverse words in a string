#include <stdio.h>
#include <stdlib.h>
#include <string.h>

const char * reverseWords(char * s){
    char arr[1000][1000];
    char *str1;
    char * token = strtok(s, " ");
    int tot_size=0;
    int i=0, j=0;
    while( token != NULL ) {
        tot_size+=(int)strlen(token);
        strcpy(arr[i], token);
        i++;
        token = strtok(NULL, " ");
    }
    tot_size+=i;
    j=i-1;
    str1 = (char*)calloc(1+tot_size, sizeof(char));
    //free(str1);
    while(j>0){
        strcat(str1, arr[j]);
        strcat(str1, " ");
        j-=1;
    }
    strcat(str1, arr[0]);
    //printf("%s", str1);
    return str1;
}

int main()
{
	char str[] ="the day is start";
	printf("%s", reverseWords(str));
}
